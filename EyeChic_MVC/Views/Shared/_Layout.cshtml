    <header class="header_section" style="  position: sticky;top: 0;z-index: 999;">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg custom_nav-container pt-3">
                <a class="navbar-brand mr-5" asp-area="" asp-controller="Home" asp-action="Index">
                    <span>
                        EyeChic
                    </span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @{
                    int role = HttpContextAccessor.HttpContext.Session.GetInt32("Role") ?? -1;
                    string email = HttpContextAccessor.HttpContext.Session.GetString("Email") ?? "";
                }

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="d-flex mr-auto flex-column flex-lg-row align-items-center">
                        <ul class="navbar-nav  ">
                           @*  <li class="nav-item active">
                                <a class="nav-link" href="index.html">home <span class="sr-only">(current)</span></a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="home" asp-action="index">home</a>
                            </li> *@
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        @if (role == 1)
                        {
                            <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Accounts" asp-action="Index">Accounts</a>
                            </li>  
                            <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                            </li>  
                            <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                            </li>
                            <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Orders" asp-action="Index">Reports</a>
                                </li>
                            }
                        @if (role != 1 && email != "")
                        {
                            
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Carts" asp-action="Cart">Cart</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a>
                                </li>
                        } 
                        </ul>
                    </div>


                    <div class="quote_btn-container ">
                        @if (email == "")
                        {
                                <a class="nav-link text-white" asp-area="" asp-controller="Accounts" asp-action="Login">Login</a>
                                <a class="nav-link text-white" asp-area="" asp-controller="Accounts" asp-action="Create">Register</a>
                            
                            <form class="form-inline">
                                <button class="btn  my-2 my-sm-0 nav_search-btn" type="submit"></button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Carts" asp-action="Cart">
                                <img src="images/cart.png" alt="" >
                            </a>
                                <a class="nav-link text-white" asp-area="" asp-controller="Accounts" asp-action="Logout">Hello @email      Logout</a>
                        }

                    
                    </div>
                </div>
            </nav>
        </div>
    </header>



