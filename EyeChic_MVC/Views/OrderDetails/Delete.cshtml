@model EyeChic_MVC.Models.OrderDetail

@{
    ViewData["Title"] = "Delete Order Detail";
}

<h1 style="text-align:center">Delete Order Detail</h1>

<div class="order-detail-info">
    <h3 style="text-align:center">Are you sure you want to delete this order detail?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            <label class="control-label">Quantity:</label>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-3">
            <label class="control-label">Unit Price:</label>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>
        <dt class="col-sm-3">
            <label class="control-label">Discount:</label>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Discount)
        </dd>
        <dt class="col-sm-3">
            <label class="control-label">Order ID:</label>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Order.OrderId)
        </dd>
        <dt class="col-sm-3">
            <label class="control-label">Product:</label>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
    </dl>

    <form asp-action="Delete" style="text-align:center">
        <input type="hidden" asp-for="OrderDetailId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Cancel</a>
    </form>
</div>
<style>
    .order-detail-info {
        margin-top: 20px;
    }

        .order-detail-info h3 {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .order-detail-info hr {
            border-top: 1px solid #ccc;
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .order-detail-info dl.row {
            display: flex;
            flex-wrap: wrap;
        }

        .order-detail-info dt.col-sm-3 {
            flex-basis: 30%;
            font-weight: bold;
            text-align: right;
        }

        .order-detail-info dd.col-sm-9 {
            flex-basis: 70%;
        }

        .order-detail-info .btn-danger {
            margin-top: 20px;
        }

        .order-detail-info .btn-primary {
            margin-top: 20px;
            margin-left: 10px;
        }

</style>