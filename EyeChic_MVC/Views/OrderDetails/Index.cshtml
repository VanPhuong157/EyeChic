@model IEnumerable<EyeChic_MVC.Models.OrderDetailsDTO>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    int role = HttpContextAccessor.HttpContext.Session.GetInt32("Role") ?? -1;
    string email = HttpContextAccessor.HttpContext.Session.GetString("Email") ?? "";
}
@{
    ViewData["Title"] = "Index";
}

<style>
    .table {
        margin-top: 5%;
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
        margin-bottom: 1rem;
        color: #212529;
        background-color: #fff;
        border-radius: 0.25rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

        .table th,
        .table td {
            padding: 1rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
            text-align: center;
        }

        .table th {
            background-color: #007bff;
            color: #fff;
            border-bottom: 2px solid #dee2e6;
            text-align: center;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        .table tbody tr:hover {
            background-color: #e9ecef;
        }

    .edit-button,
    .delete-button {
        display: inline-block;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        font-weight: 500;
        line-height: 1.5;
        text-align: center;
        text-decoration: none;
        border-radius: 0.25rem;
        transition: background-color 0.15s ease-in-out, color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .edit-button {
        color: #007bff;
        border: 2px solid #007bff;
    }

    .delete-button {
        color: #dc3545;
        border: 2px solid #dc3545;
    }

        .edit-button:hover,
        .delete-button:hover {
            background-color: #0056b3;
            color: #fff;
        }

        .edit-button:focus,
        .delete-button:focus {
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.5);
        }
</style>

<h1 style="text-align: center; justify-content: center; color:cornflowerblue">Details</h1>

<table class="table">
    <thead>
        <tr>
            <th>Quantity</th>
            <th>UnitPrice</th>
            <th>Discount</th>
            <th>OrderId</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice</td>
                <td>@item.Discount</td>
                <td>@item.OrderId</td>
                <td><img src="@item.Img" style="width: 80px; height: auto;" /></td>
                <td>
                    @if (role == 1)
                    {
                        <a class="edit-button" asp-action="Edit" asp-route-id="@item.OrderDetailId">Edit</a>
                        <a class="delete-button" asp-action="Delete" asp-route-id="@item.OrderDetailId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
