@model EyeChic_MVC.Models.Account

@{
    ViewData["Title"] = "Details";
}
<style>
    /* Container style */
    .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /* Header style */
    h1 {
        color: #333;
        text-align: center;
    }

    /* Account details style */
    .row {
        margin-bottom: 20px;
    }

    .col-sm-2 {
        font-weight: bold;
    }

    /* Edit and Back link style */
    .edit-back-links {
        text-align: center;
        margin-top: 20px;
    }

        .edit-back-links a {
            color: #007bff;
            text-decoration: none;
            margin: 0 10px;
        }

            .edit-back-links a:hover {
                text-decoration: underline;
            }
</style>

<div class="container">
    <h1>Details</h1>

    <div>
        <h4>Account</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fullname)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fullname)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Password)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Password)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Role)
            </dt>
            <dd class="col-sm-10">
                @if (Model.Role == 1)
                {
            <span>Admin</span>
                }
                else
                {
            <span>User</span>
                }
</dd>
        </dl>
    </div>

    <div class="edit-back-links">
        <a asp-action="Edit" asp-route-id="@Model?.AccountId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>
